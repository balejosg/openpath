# OpenPath API - Test Environment Configuration
# This file is used for local E2E testing

# Database (PostgreSQL via docker-compose.test.yml)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=openpath_test
DB_USER=openpath
DB_PASSWORD=openpath_test

# Security
JWT_SECRET=test-jwt-secret-for-e2e-testing-only-do-not-use-in-production
SHARED_SECRET=test-shared-secret-for-e2e

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS (allow local development)
CORS_ORIGINS=http://localhost:3001,http://localhost:5173,http://127.0.0.1:3001

# Logging
LOG_LEVEL=info

# Rate limiting (relaxed for testing)
RATE_LIMIT_MAX=1000
AUTH_RATE_LIMIT_MAX=100
